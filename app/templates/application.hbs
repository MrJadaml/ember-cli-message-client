<header>
  <div class="nav-bar">
    <div class="brand">
      <a href="#">Rantly</a>
    </div>
    <nav>
      {{#link-to 'rants'}}Rants{{/link-to}}
      {{#link-to 'users'}}Users{{/link-to}}
      {{#link-to 'styleguide'}}Styleguide{{/link-to}}
    </nav>
  </div>
</header>

<div class="content">

  <aside class="rants-navigation">
    <div class="search">
      {{input value=query action="doSearch" placeholder="Search"}}
    </div>

    <div class="swappable">
      <div class="avatar">
        <img src="" alt="" />
      </div>
      <div class="log-out">
        {{#link-to 'login'}}
          <button class=" btn-green">Login</button>
        {{/link-to}}
      </div>
    </div>
  </aside>

  <header class="content-header">
    {{#link-to 'new'}}
      <button class="new-rant-btn">New Rant</button>
    {{/link-to}}
  </header>

  <div class="main">
    {{outlet}}
  </div>
</div>
