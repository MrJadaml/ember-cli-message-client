<header>
  <div class="nav-bar">
    <div class="brand">
      <a href="#">Rantly</a>
    </div>
    <nav>
      {{#link-to 'rants'}}Rants{{/link-to}}
      {{#link-to 'users'}}Users{{/link-to}}
      {{#link-to 'styleguide'}}Styleguide{{/link-to}}
    </nav>
  </div>
</header>

<div class="content">

  <aside class="rants-navigation">
    <div class="search">
      {{input value=query action="doSearch" placeholder="Search"}}
    </div>

    <div class="swappable">
      {{#if currentUser}}
        <div class="avatar">
          <img src="" alt="" />
        </div>
        <div class="btn-grn logout">
          {{#link-to 'logout'}}
            <button class="btn-green">Log Out</button>
          {{/link-to}}
        </div>
      {{else}}
        <form class="login-form" {{action 'login' on='submit'}}>
          <div class="nav-form">
            {{ input value=email type='text' placeholder='email' }}
          </div>
          <div class='nav-form'>
            {{ input value=password type='password' placeholder='password'}}
          </div>
          {{#link-to 'login'}}Login{{/link-to}}
          {{input class="button btn-green login" value="Log In" type="submit"}}
        </form>
        {{#if errorMessage}}
          <div class="alert alert-error">{{errorMessage}}</div>
        {{/if}}
      {{/if}}
    </div>
  </aside>

  <header class="content-header">
    {{#link-to 'new'}}
      <button class="new-rant-btn">New Rant</button>
    {{/link-to}}
  </header>

  <div class="main">
    {{outlet}}
  </div>
</div>
